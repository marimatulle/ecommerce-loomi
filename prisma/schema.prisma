generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
}

model User {
  id         Int       @id @default(autoincrement()) @unique
  name       String
  email      String    @unique
  password   String
  role       UserRole  @default(CLIENT)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}